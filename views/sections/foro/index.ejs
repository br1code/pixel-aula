<% include ../../partials/header %>
<% include ../../partials/nav %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron text-center mt-4 shadow">
                <h1 class="display-5 mb-3">Bienvenido al Foro de PixelAula</h1>
                <p class="lead">Es un foro de discusiones sobre temas académicos para alumnos de nivel superior y universitario.</p>
                <hr class="my-3">
                <p class="mt-3">Puedes proponer tus propios temas de discusión</p>
                <p class="lead">
                    <a class="btn btn-dark shadow" href="/foro/nuevo">Nuevo Tema</a>
                </p>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4 text-center mb-3">
            <h2 class="display-5">Buscar temas</h2>
            <div class="form-group">
                <input type="text" id="search" class="form-control" placeholder="Nombre o Etiqueta">
                <small class="form-text text-muted">Busca el tema por su contenido o sus etiquetas</small>
            </div>
        </div>

        <div class="col-md-8">
            <% topics.forEach(topic => { %>
                    <div class="card my-3 shadow rounded" full-data="<%= topic.title %> <%= topic.description %> <%= topic.carrer %> <%= topic.tags.join(' ') %>">

                        <div class="card-header bg-light">
                            <h3 class="card-title my-1"><%= topic.title %></h3>
                        </div>

                        <div class="card-body">
                            <h6 class="card-subtitle mb-2">
                                Carrera: <span class="small"><%= topic.carrer %></span>
                            </h6>
                            <h6 class="card-subtitle mb-2">
                                Publicaciones: <span class="small"><%= topic.threads.length %></span>
                            </h6>
                            <h6 class="card-subtitle my-2">
                                <% topic.tags.forEach(tag => { %>
                                    <span style='margin-right: .35rem;' class='badge badge-secondary'><%= tag %></span>
                                <% }); %>
                            </h6>
                            <p class="card-text"><%= topic.description %></p>
                        </div>

                        <div class="card-footer bg-light text-center">
                            <a href="/foro/<%= topic._id %>" class="card-link btn btn-secondary btn-sm shadow">Ingresar</a>
                        </div>

                    </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ../../partials/footer %>
<script src="/js/foro/indexForo.js"></script>