<% include ../../partials/header %>
<% include ../../partials/nav %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron text-center mt-4 shadow">
                <h1 class="display-5 mb-3"><%= topic.title %></h1>
                <p class="lead"><%= topic.description %></p>
                <hr class="my-3">
                <p class="mt-3">Puedes hacer publicaciones sobre este tema. Una publicación puede ser una pregunta o información que quieras compartir.</p>
                <p class="lead">
                    <a class="btn btn-dark shadow" href="/foro/<%= topic._id %>/nuevo">Nueva publicación</a>
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 text-center">
            <h2 class="display-5">Buscar Publicaciones</h2>
            <div class="form-group">
                <input type="text" id="search" class="form-control" placeholder="Título">
                <small class="form-text text-muted">Busca una publicación por su título</small>
            </div>
        </div>
        <div class="col-md-8">
            <% topic.threads.forEach(thread => { %>
                <div class="card my-3 shadow" full-data="<%= thread.title %>">
                    <div class="card-header bg-light">
                        <h3 class="card-title my-1">
                            <%= thread.title %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3">
                            <% if (thread.comments.length) { %>
                                Comentarios: <%= thread.comments.length %>
                            <% } else { %>
                                No hay comentarios
                            <% } %>
                            <span class="float-right mb-3"><%= thread.date %></span>
                        </h6>
                        <p class="card-text"><%= thread.body.substr(0, 195) %> ...</p>
                    </div>
                    <div class="card-footer text-center bg-light">
                        <a href="/foro/<%= topic._id %>/<%= thread._id %>" class="card-link btn btn-secondary btn-sm shadow">Leer</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ../../partials/footer %>
<script src="/js/thread.js"></script>