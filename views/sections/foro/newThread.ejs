<% include ../../partials/header %>

<div class="container mt-3 mx-auto" style="max-width: 450px;">
    <form id="myForm" style="max-width: 450px;margin: 0 auto;" action="/foro/<%= topic._id %>/nuevo" method="POST">
        <h1 class="display-4 text-center mt-2">Crear un Subtema para</h1>
        <p class="lead text-center"><%= topic.title %></p>

        <div class="form-group my-3">
            <input type="text" class="form-control" placeholder="Título" name="thread[title]" required autofocus spellcheck="false" autocomplete="off">
            <small class="form-text text-muted">¿Cuál es el título del nuevo subtema?</small>
        </div>
        
        <div class="form-group my-3">
            <textarea id="descripcion" class="form-control" name="thread[body]" rows="8" placeholder="Contenido" required autofocus spellcheck="false" autocomplete="off"></textarea>
            <small class="form-text text-muted">¿Cuál es el contenido del nuevo subtema?</small>
        </div>

        <button type="submit" class="btn btn-primary btn-block btn-sm mt-3">Enviar</button>

        <div class="text-center">
            <a href="/foro/<%= topic._id %>"><button type="button" class="btn btn-link">Volver</button></a>
        </div>
        
    </form>
</div>
    
<% include ../../partials/footer %>