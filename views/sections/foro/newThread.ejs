<% include ../../partials/header %>

<div class="container mt-3 mx-auto" style="max-width: 450px;">
    <form id="myForm" style="max-width: 450px;margin: 0 auto;" action="/foro/<%= topic._id %>/nuevo" method="POST">
        
        <h1 class="display-4 text-center mt-2">Crear una Publicación</h1>
        <p class="lead text-center">Tema : <span class="small"><%= topic.title %></span></p>

        <div class="form-group my-3">
            <input type="text" class="form-control" placeholder="Título" name="thread[title]" data-toggle="tooltip" data-placement="top" 
            data-html="true" title="Ejemplo : <em>Necesito información de cursos de programación en Rosario</em>" required spellcheck="false" autocomplete="off">
            <small class="form-text text-muted">¿Cuál es el título de la nueva publicación?</small>
        </div>
        
        <div class="form-group my-3">
            <textarea id="descripcion" class="form-control" name="thread[body]" rows="8" placeholder="Contenido" 
            data-toggle="tooltip" data-placement="top" data-html="true" required spellcheck="false" autocomplete="off"
            title="Ejemplo : <em>Alguien podría pasarme información de cursos de programación para principiantes en Rosario? Muchas gracias</em>"></textarea>
            <small class="form-text text-muted">¿Cuál es el contenido de la nueva publicación?</small>
        </div>

        <button type="submit" class="btn btn-primary btn-block btn-sm mt-3">Publicar</button>
        
    </form>
</div>
    
<% include ../../partials/footer %>
<script src="/js/newThread.js"></script>