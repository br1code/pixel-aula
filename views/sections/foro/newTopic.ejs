<% include ../../partials/header %>

<div class="container my-3 mx-auto" style="max-width: 450px;">
    <form class="mx-auto" id="myForm" style="max-width: 350px;" action="/foro/nuevo" method="POST">
        <h1 class="display-4 text-center">Proponer un nuevo tema</h1>

        <div class="form-group my-3">
            <input type="text" class="form-control" placeholder="Nombre" name="topic[title]" data-toggle="tooltip" data-placement="top" 
            data-html="true" title="Ejemplo : <em>Programación para principiantes</em>" required spellcheck="false" autocomplete="off">
            <small class="form-text text-muted">¿Cuál es el nombre del nuevo tema?</small>
        </div>
        

        <div class="form-group my-3">
            <textarea id="descripcion" class="form-control" name="topic[description]" rows="3" placeholder="Descripción" data-toggle="tooltip" 
            data-placement="top" data-html="true" title="Ejemplo: <em>Conceptos básicos de programación y algoritmos para alumnos iniciales</em>" 
            required spellcheck="false" autocomplete="off"></textarea>
            <small class="form-text text-muted">¿De qué se hablará en este nuevo tema?</small>
        </div>

        <div class="form-group my-3">
            <input type="text" class="form-control" placeholder="Carrera" name="topic[carrer]" data-toggle="tooltip" data-placement="top" 
            data-html="true" title="Ejemplo: <em>Ingeniería en Sistemas</em>" spellcheck="false" autocomplete="off">
            <small class="form-text text-muted">¿El nuevo tema está dirigido a una carrera en específico?</small>
        </div>

        <div class="form-group mt-3">
            <select class="form-control" id="tags">
                <option value="" selected disabled hidden>Elige una o más opciones</option>
                <option>Preguntas</option>
                <option>Información</option>
                <option>Noticias</option>
                <option>Discusión</option>
            </select>
            <small class="form-text text-muted">¿Qué contenido habrá en el nuevo tema? Puedes eliminarlas</small>
        </div>
    
        <div id="tagList" class="my-3 text-center"></div>

        <button type="submit" class="btn btn-primary btn-block btn-sm mt-3">Proponer</button>
        
    </form>
</div>

<% include ../../partials/footer %>
<script src="/js/newTopic.js"></script>